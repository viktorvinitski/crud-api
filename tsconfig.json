{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": false,
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}